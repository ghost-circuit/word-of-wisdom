FROM golang:1.22.7 AS build

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Using absolute paths in the build step
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -mod=vendor -o /app/main cmd/client/main.go

FROM alpine:3.12

RUN apk --no-cache add ca-certificates

WORKDIR /app

# Correcting the copy path
COPY --from=build /app/main /app/main
RUN chmod +x /app/main

CMD ["./main"]